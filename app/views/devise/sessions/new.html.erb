<!-- app/views/devise/sessions/new.html.erb -->
<div class="container mt-5">
  <h2>Iniciar Sesión</h2>
  <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), local: true) do |f| %>
    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, class: "form-control", required: true %>
    </div>
    <div class="mb-3">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", required: true %>
    </div>
    <div class="mb-3 form-check">
      <%= f.check_box :remember_me, class: "form-check-input" if devise_mapping.rememberable? %>
      <%= f.label :remember_me, class: "form-check-label" if devise_mapping.rememberable? %>
    </div>
    <div class="actions">
      <%= f.submit "Iniciar Sesión", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
